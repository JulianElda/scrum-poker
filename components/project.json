{
  "name": "components",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "components/src",
  "prefix": "scp",
  "tags": ["ui"],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "components/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["components/**/*.ts", "components/**/*.html"]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "components/.storybook",
        "browserTarget": "components:build-storybook",
        "compodoc": false,
        "styles": [
          "src/assets/styles/styles.css",
          "src/assets/styles/tailwind.css"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/components",
        "configDir": "components/.storybook",
        "browserTarget": "components:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
